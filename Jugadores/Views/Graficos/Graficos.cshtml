@{
    ViewData["Title"] = "Graficos";
}

<div class="text-center">
    <h1 class="display-4">Estadisticas de jugadores</h1>
</div>

<div class="row">
    <div class="col-md-4">

        <div class="row">

            <div class="col-lg-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-search me-1"></i>
                        Métodos de Búsqueda
                    </div>
                    <div class="card-body">

                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-12 mb-2">
                                <label for="JugadorID" class="form-label">Jugador:</label>
                                @Html.DropDownList("JugadorID", null, htmlAttributes: new { @class = "form-control" })
                            </div>

                            <div class="col-lg-6 col-md-6 col-sm-6 col-6 mb-2">
                                <label class="control-label">Mes:</label>
                                <select class="form-control" id="MesPartidoBuscar">
                                    <option value="1">Enero</option>
                                    <option value="2">Febrero</option>
                                    <option value="3">Marzo</option>
                                    <option value="4">Abril</option>
                                    <option value="5">Mayo</option>
                                    <option value="6">Junio</option>
                                    <option value="7">Julio</option>
                                    <option value="8">Agosto</option>
                                    <option value="9">Septiembre</option>
                                    <option value="10">Octubre</option>
                                    <option value="11">Noviembre</option>
                                    <option value="12">Diciembre</option>
                                </select>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-6 mb-2">
                                <label class="control-label">Año:</label>
                                <select class="form-control" id="AnioPartidoBuscar">
                                    <option value="2023">2023</option>
                                    <option value="2024" selected>2024</option>
                                </select>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Partidos por Jugador
                </div>
                <div class="card-body">
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/graficos.js"></script>
}