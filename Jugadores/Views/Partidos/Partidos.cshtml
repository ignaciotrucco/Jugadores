@{
  ViewData["Title"] = "Partidos";
}

<div class="text-center">
  <h1 class="display-4">Partidos por Jugador</h1>
</div>

<!-- Button trigger modal -->
<div class="container m-4">
  <div class="row">
    <div class="col-md-2">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalPartidos"
        onclick="NuevoRegistro()">
        Nuevo Registro
      </button>
    </div>
    <div class="col-md-3">
      @Html.DropDownList("JugadorIDBuscar", null, htmlAttributes: new
        {
          @class = "form-control",
          @onchange =
             "ListadoPartidos()"
        })
    </div>
    <div class="col-md-2">
      <input id="FechaPartidoBuscar" type="date" class="form-control">
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalPartidos" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tituloModalPartidos"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
          onclick="LimpiarModal()"></button>
      </div>
      <div class="modal-body">
        <form>
          <input type="hidden" id="PartidoID" value="0" />
          <label for="JugadorID" class="form-label">Jugador</label>
          @Html.DropDownList("JugadorID", null, htmlAttributes: new { @class = "form-control" })

          <label for="FechaPartido" class="form-label">Fecha del partido</label>
          <input type="date" id="FechaPartido" class="form-control">

          <label for="Minutos" class="form-label">Minutos jugados</label>
          <input type="number" id="Minutos" class="form-control">

          <label for="Estadio" class="form-label">Estadio</label>
          <input type="text" id="Estadio" class="form-control">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal" onclick="LimpiarModal()">Cerrar</button>
        <button type="button" class="btn btn-success" onclick="GuardarPartido()">Guardar</button>
      </div>
    </div>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Jugador</th>
      <th>Fecha</th>
      <th>Minutos Jugados</th>
      <th>Estadio</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody id="tbody-partidos"></tbody>
</table>

@section Scripts {
  <script src="~/js/partidos-1.0.js"></script>
}